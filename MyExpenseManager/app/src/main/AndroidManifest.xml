<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hpes.shubham.myexpensemanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddTripActivity" />
        <activity android:name=".AddExpenseActivity" />
        <activity android:name=".DetailsActivity" />
        <activity android:name=".ViewTableActivity" />
        <activity android:name=".ViewBalanceActivity" />
        <activity android:name=".UpdateActivity" />
        <activity android:name=".DeleteActivity" />
        <activity android:name=".UpdateValuesActivity"></activity>
    </application>

</manifest>